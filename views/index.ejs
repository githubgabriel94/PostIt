<%- include("./partials/header.ejs") %>

<section id="mainBody">
  <hr class="border border-3 opacity-50 mt-0" />
  <section id="newPostForm" class="py-5 ">
    <div class="row justify-content-center">
      <div class="col-xl-4 col-lg-3 col-md-3 col-sm-2 col-xs-1"></div>
      <div class="col-xl-4 col-lg-6 col-md-6 col-sm-8 col-xs-10">
        <form action="/newPost" method="post">
          <div class="row  mx-auto">
            <div class="col-sm-10 col-xs-12">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Title</span>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Title of your new post."
                  aria-label="Username"
                  aria-describedby="basic-addon1"
                  name="newPostTitle"
                />
              </div>
            </div>
            <div class="col-sm-2 col-xs-12">
              <input
                type="submit"
                class="btn btn-outline-light"
                value="New Post"
              />
            </div>
          </div>
        </form>
      </div>
      <div class="col-xl-4 col-lg-3 col-md-3 col-sm-2 col-xs-12"></div>
    </div>
  </section>
  <section id="allPosts">
    <div class="container">
      <div class="row justify-content-center">
        <% if(locals.posts) {%> <% posts.forEach(post => { %>
        <div class="col-lg-4 col-sm-6 col-xs-12 my-1">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/post/<%= post.id %>"><%= post.title %></a>
              </h5>
              <h6 class="card-subtitle mb-2 text-body-secondary">
                <%= post.date %>
              </h6>
              <p class="card-text" style="max-height: 10rem; min-height: 10rem; overflow: hidden;"><%= post.content %></p>
              <form action="/post/<%= post.id %>" method="post">
                <button class="btn btn-outline-dark">Delete</button>
              </form>
            </div>
          </div>
        </div>
        <% });%>
      </div>

      <% } else { %>
      <div class="container text-center">
        <div class="row align-items-center">
          <div class="col"></div>
          <div class="col">
            <h3 class="display-6 text-light">No posts yet!</h3>
          </div>
          <div class="col"></div>
        </div>
      </div>
      <% } %>
    </div>
  </section>
</section>

<%- include("./partials/footer.ejs") %>
